    <class>DAL.Administrador</class>
    <class>DAL.Rececionista</class>
    <class>DAL.Especialidade</class>
    <class>DAL.Consulta</class>
    <class>DAL.Utilizador</class>
    <class>DAL.Medico</class>
    <class>DAL.Paciente</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@//localhost:1521/sys"/>
